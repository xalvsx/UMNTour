<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:id="@+id/layout"
    android:background="@drawable/main">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLoad"
        android:background="@drawable/load_savepoint"
        android:layout_marginEnd="95dp"
        android:layout_above="@+id/btnExit"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/start_tour"
        android:id="@+id/btnStart"
        android:layout_alignTop="@+id/btnLoad"
        android:layout_alignStart="@+id/btnAbout" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/about"
        android:id="@+id/btnAbout"
        android:layout_marginStart="95dp"
        android:layout_alignTop="@+id/btnExit" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/exit"
        android:id="@+id/btnExit"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnLoad"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
